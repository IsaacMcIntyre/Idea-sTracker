@model IdeasTracker.Models.BackLog

@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div>
    <h4>@Model.CustomerProblem</h4>

    <dl class="row">
        <div class="col-sm-6">
            <dt class="col-sm-4">
                <p>
                    @Html.DisplayNameFor(model => model.Id)
                    <div class="text-display">
                        @Model.Id
                    </div>
                </p>
            </dt>
            <dt class="col-sm-4">
                <p>
                    @Html.DisplayNameFor(model => model.CustomerProblem)
                    <div class="text-display">
                        @Model.CustomerProblem
                    </div>
                </p>
            </dt>
            <dt class="col-sm-4">
                <p>
                    @Html.DisplayNameFor(model => model.ProblemDescription)
                    <div class="text-display">
                        @Model.ProblemDescription
                    </div>
                </p>
            </dt>
            <dt class="col-sm-4">
                <p>
                    @Html.DisplayNameFor(model => model.Status)
                    <div class="text-display">
                        @Model.Status
                    </div>
                </p>
            </dt>
        </div>
        <div class="col-sm-6">
            <dt class="col-sm-4">
                <p>
                    @Html.DisplayNameFor(model => model.ProductOwner)
                    <div class="text-display">
                        @Model.ProductOwner
                    </div>
                </p>
            </dt>
            <dt class="col-sm-4">
                <p>
                    @Html.DisplayNameFor(model => model.BootcampAssigned)
                    <div class="text-display">
                        @Model.BootcampAssigned
                    </div>
                </p>
            </dt>
            <dt class="col-sm-4">
                <p>
                    @Html.DisplayNameFor(model => model.SolutionDescription)
                    <div class="text-display">
                        @Model.SolutionDescription
                    </div>
                </p>
            </dt>
        </div>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && Model.RaisedBy == User.Identity.Name)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a><span> |</span>
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a><span> |</span>
    }
    <a asp-action="Index">Back to List</a>
</div>