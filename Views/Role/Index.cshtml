@model IEnumerable<IdeasTracker.Models.UserModel>

@{
    ViewData["Title"] = "Roles";
}

@section scripts{
<script>$('#image').css('background-image', 'url(https://i.imgur.com/rbshyfB.jpg)');
    $("#image-text").text("Lets see what everyones role\'s are.");</script>
}
 
<div class="table-responsive">
   <table class="table">
    
    <thead>
      <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
          <th>

        </th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model) {  
      <tr>
          <td>
              @Html.DisplayFor(modelItem => item.Id)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Name)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Email)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Role)
          </td>
          <td> 
              <a asp-action="Edit" asp-route-id="@item.Id" class="btn AND-button mb-1"><i class="fas fa-pencil-alt"></i>Edit</a> 
          </td>
          <td> 
              <a asp-action="Delete" asp-route-id="@item.Id" class="btn AND-button"><i class="fas fa-trash-alt"></i> Delete</a> 
          </td>
      </tr>
      }
    </tbody>
</table>
   <p> 
       <a class="btn AND-button" asp-action="Create"><i class="fas fa-user-plus"></i> Create New</a> 
   </p>
    </div>
